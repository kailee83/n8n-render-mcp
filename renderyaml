services:
  - type: web
    name: n8n
    env: docker
    plan: free # Changé de "starter" à "free"
    healthCheckPath: /
    envVars:
      - key: N8N_BASIC_AUTH_USER
        value: admin
      - key: N8N_BASIC_AUTH_PASSWORD
        value: admin123
      - key: N8N_ENCRYPTION_KEY
        generateValue: true
      - key: PORT
        value: 5678
      - key: N8N_PORT
        value: 5678
      - key: N8N_HOST
        fromService:
          name: n8n
          type: web
          property: host
      - key: N8N_PROTOCOL
        value: https
      - key: NODE_ENV
        value: production
      - key: N8N_METRICS
        value: false # Changé à false pour économiser des ressources